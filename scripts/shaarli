#!/bin/bash
# srv01 - shaarli wrapper
# https://github.com/nodiscc/srv01
# ░░░░░█▀█
# ░░░░░█░█
# ░▀▀▀░▀▀▀
source "${srv01_path}/scripts/functions.sh"

_install() {
	git clone https://github.com/shaarli/Shaarli "$srv01_apache_documentroot"/links
	cp -r "$srv01_path"/config/shaarli/* "$srv01_apache_documentroot"/links
	chown -R "$srv01_apache_user":"$srv01_apache_group" "$srv01_apache_documentroot"/links
	echo "please open $srv01_fqdn/links/"

}

if [ "$1" != "" ]
	then $@
	else _listFunctions
fi